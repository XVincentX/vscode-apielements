{
  "name": "vscode-apielements",
  "description": "VSCode language server for ApiElements",
  "version": "0.4.2",
  "author": "Vincenzo Chianese",
  "license": "MIT",
  "engines": {
    "node": "*"
  },
  "dependencies": {
    "drafter.js": "^2.5.0-pre.0",
    "fury": "^2.2.0",
    "fury-adapter-swagger": "^0.9.5",
    "lodash": "^4.15.0",
    "lodash-api-description": "0.0.2",
    "vscode-languageserver": "^2.5.0"
  },
  "devDependencies": {
    "jest-cli": "^15.0.0",
    "ts-jest": "^0.1.4",
    "typescript": "^1.8.9"
  },
  "jest": {
    "scriptPreprocessor": "<rootDir>/node_modules/ts-jest/preprocessor.js",
    "moduleFileExtensions": [
      "ts",
      "js",
      "json"
    ],
    "testRegex": "/__tests__/.*\\.(ts)$",
    "testEnvironment": "node",
    "globals": {
      "__TS_CONFIG__": {
        "module": "commonjs",
        "jsx": "react"
      }
    }
  },
  "scripts": {
    "compile": "installServerIntoExtension ../client ./package.json ./tsconfig.json && tsc",
    "watch": "installServerIntoExtension ../client ./package.json ./tsconfig.json && tsc --watch",
    "test": "jest"
  }
}
